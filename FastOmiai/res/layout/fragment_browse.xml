<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView 
        android:id="@+id/image_user_photo"
        android:layout_width="@dimen/browse_photo_size"
        android:layout_height="@dimen/browse_photo_size"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:background="@drawable/woman" />

    <Button
        android:id="@+id/text_tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/homepage_baseinfo_item_shape"
        android:text="是不是"
        android:textSize="@dimen/browse_tag_textsize"
        android:padding="@dimen/browse_tag_padding" />
    
    <Button
        android:id="@+id/text_tag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="@drawable/homepage_baseinfo_item_shape"
        android:text="是不是"
        android:textSize="@dimen/browse_tag_textsize"
        android:padding="@dimen/browse_tag_padding" />
    
    <Button
        android:id="@+id/text_tag3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:background="@drawable/homepage_baseinfo_item_shape"
        android:text="是不是"
        android:textSize="@dimen/browse_tag_textsize"
        android:padding="@dimen/browse_tag_padding" />
    
    <Button
        android:id="@+id/text_tag4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/homepage_baseinfo_item_shape"
        android:text="是不是"
        android:textSize="@dimen/browse_tag_textsize"
        android:padding="@dimen/browse_tag_padding" />
    
    <Button
        android:id="@+id/text_tag5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="300dp"
        android:background="@drawable/homepage_baseinfo_item_shape"
        android:text="是不是"
        android:textSize="@dimen/browse_tag_textsize"
        android:padding="@dimen/browse_tag_padding" />
    
    <Button
        android:id="@+id/btn_no_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_button_shape"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/browse_button_bottom_margin"
        android:layout_marginLeft="@dimen/browse_button_margin"
        android:text="@string/browse_no_love"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:padding="@dimen/browse_button_padding" />
    
    <Button
        android:id="@+id/btn_browse_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pink_button_shape"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/browse_button_bottom_margin"
        android:layout_marginRight="@dimen/browse_button_margin"
        android:text="@string/browse_date"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:padding="@dimen/browse_button_padding" />

</RelativeLayout>